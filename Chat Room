document.getElementById('chatButton').addEventListener('click', function() {
    var chatWindow = window.open("about:blank", "_blank", "width=400,height=600");
    
    // Load the chat room interface into the new window
    var chatRoomHTML = `
        <!DOCTYPE html>
        <html>
        <head>
            <title>Chat Room</title>
            <style>
                body { font-family: Arial, sans-serif; }
                #chatMessages { height: 400px; overflow-y: auto; border: 1px solid #ccc; }
                #chatInput { width: 100%; }
            </style>
        </head>
        <body>
            <div id="chatMessages"></div>
            <input id="chatInput" type="text" placeholder="Type a message..." />
            <button onclick="sendMessage()">Send</button>
            <script>
                function sendMessage() {
                    var message = document.getElementById('chatInput').value;
                    document.getElementById('chatInput').value = '';
                    var chatMessages = document.getElementById('chatMessages');
                    chatMessages.innerHTML += '<p>' + message + '</p>';
                    chatMessages.scrollTop = chatMessages.scrollHeight; // Auto scroll to bottom
                }
            </script>
        </body>
        </html>
    `;

    chatWindow.document.write(chatRoomHTML);
    chatWindow.document.close();
});
